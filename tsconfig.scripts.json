{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // âœ… Use CommonJS, not ESNext
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": ["scripts/**/*.ts", "types/**/*.ts", "utils/**/*.ts"]
}
